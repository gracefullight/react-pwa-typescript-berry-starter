{
  "name": "react-pwa-typescript-berry-starter",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gracefullight/react-pwa-typescript-berry-starter.git"
  },
  "author": {
    "name": "gracefullight",
    "email": "gracefullight.dev@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "http-proxy-middleware": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^2.1.0",
    "workbox-background-sync": "^6.2.2",
    "workbox-broadcast-update": "^6.2.2",
    "workbox-cacheable-response": "^6.2.2",
    "workbox-core": "^6.2.2",
    "workbox-expiration": "^6.2.2",
    "workbox-google-analytics": "^6.2.2",
    "workbox-navigation-preload": "^6.2.2",
    "workbox-precaching": "^6.2.2",
    "workbox-range-requests": "^6.2.2",
    "workbox-routing": "^6.2.2",
    "workbox-strategies": "^6.2.2",
    "workbox-streams": "^6.2.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "airbnb-typescript",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.13",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/testing-library__jest-dom": "^5.14.1",
    "devmoji": "^2.3.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.3.5"
  }
}
